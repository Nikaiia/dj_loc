<header class="navbar">
    <div class="logo">
      <%= link_to root_path do %>
        <%= image_tag 'logo.png', alt:'Dj lock Logo' %>
      <% end %>
      <% if user_signed_in? && current_user.role == "DJ" %>
        <%= link_to dashboard_user_path(current_user), class: 'dashboard-link' do %>
          <span class="dashboard-text">Dashboard</span>
        <% end %>
      <% end %>
    </div>
    <div class="profil">
    </div>
    <ul class="nav-links">
      <% if user_signed_in? %>
        <%= link_to "Profile", user_path(current_user), class: 'secondary-light' %>
        <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", data: {turbo_method: :delete}, class: 'primary-red' %>
      <% else %>
        <%= link_to 'Sign In', new_user_session_path, class: 'primary-red' %>
        <%= link_to 'Sign Up', new_user_registration_path, class: 'secondary-light' %>
      <% end %>
    </ul>
  </header>
