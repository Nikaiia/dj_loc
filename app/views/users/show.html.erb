<div class="container">
  <div class="title-profile">
    <h1>My Profile</h1>
    </div>

    <div class="profile-grid">
      <div>
        <div class="profile-image">
        <% if @user.photo.attached?%>
          <%= cl_image_tag @user.photo.key, crop: :fill %>
        <% else %>
          <%= image_tag 'fatima_hajji.jpeg', class: "offer-image" %>
        <% end %>
        </div>
        <%= link_to user_path(@user), class: "delete", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } do %>
            <span><i class="fa-solid fa-trash"></i>Delete user</span>
          <% end %>
      </div>

      <div>
        <div class="profile-card">
        <h5>‚ÑπÔ∏è Name</h5>
          <p><%= "#{@user.first_name} #{@user.last_name}"%></p>
              <%= link_to edit_user_registration_path(@user), class: "edit", method: :get do %>
          <i class="fa-solid fa-pen-to-square fa-xl"></i>
          <% end %>
        </div>

        <address class="profile-card">
          <h5>üìß Email</h5>
          <p><%= @user.email %></p>
          <%= link_to edit_user_registration_path(@user), class: "edit", method: :get do %>
          <i class="fa-solid fa-pen-to-square fa-xl"></i>
          <% end %>
        </address>

        <div class="profile-card">
          <h5>üéß Role</h5>
          <p><%= @user.role %></p>
          <%= link_to edit_user_registration_path(@user), class: "edit", method: :get do %>
          <i class="fa-solid fa-pen-to-square fa-xl"></i>
          <% end %>
        </div>

        <div class="profile-card">
          <h5>üìû Phone</h5>
          <p><%= @user.phone_number %></p>
          <%= link_to edit_user_registration_path(@user), class: "edit", method: :get do %>
          <i class="fa-solid fa-pen-to-square fa-xl"></i>
          <% end %>
        </div>

        <div class="profile-card">
          <h5> üöÄ Username</h5>
          <p><%= @user.username %></p>
          <%= link_to edit_user_registration_path(@user), class: "edit", method: :get do %>
          <i class="fa-solid fa-pen-to-square fa-xl"></i>
          <% end %>
      </div>
    </div>
  </div>
</div>
