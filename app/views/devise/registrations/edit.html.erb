<div class="container-form pt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4">

<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: user_path(@user), html: { method: :put }) do |f| %>
  <%= f.error_notification %>


  <div class="form-inputs">
     <div class="row">
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first name" }, class: 'col-6 mb-3'%>
                </div>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last name" }, class: 'col-6 mb-3'%></div>

     <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }, class: 'col-6 mb-3'%>

    <%= f.input :role, collection: ["DJ", "Customer"],
                required: true,
                autofocus: true,
                input_html: { autocomplete: "role" }, class: 'col-12 mb-3'%>

    <%= f.input :username,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "username" }, class: 'col-6 mb-3'%>

    <%= f.input :phone_number,
                required: true,
                autofocus: true,
                input_tel: { autocomplete: "Phone number" }, class: 'col-12 mb-3'%>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>
</div>

</div>
</div>
</div>
